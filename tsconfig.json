{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "Node16",
    "preserveConstEnums": true,
    "moduleResolution": "Node16",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["node", "jest"],
    "typeRoots": ["./src/types/*.d.ts", "./node_modules/@types"],
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
